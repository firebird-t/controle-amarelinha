<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd652"
    tools:context="app.leonardo.controle_amarelinha.ButtonActionActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:layout_marginBottom="178dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/inky"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_pedra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bt_pedra"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginBottom="144dp"
        android:layout_marginRight="104dp"
        android:background="#ffd652"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/botao_jogar_pedra" />
</android.support.constraint.ConstraintLayout>
